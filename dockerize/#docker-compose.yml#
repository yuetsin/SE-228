version : '2'
services:
  -- 服务名称，其他服务调用的时候就用这个名称
  mysql1:
    image: leo/mysql:latest
    volumes:
           - ./src/main/docker/mysql/my.cnf:/etc/mysql/my.cnf mysql
    environment:
       - MYSQL_ROOT_PASSWORD=123456
    ports:
       - "3307:3306"
    expose:
       - "3307"
           
  demo:
    image: leo/demo:latest
    ports:
      - "8080:8080"
    links:
        -- 连接的服务，这里连接到了mysql1
        - mysql1

  